[user]
	name = Daniel Laubacher
	email = dlaubacher3@gmail.com
[core]
	editor = nvim
  excludesfile = !~/.gitignore_global
[submodule]
	recurse = true
[alias]
	logg = !git log --graph --oneline --decorate --all
	up = !git push --set-upstream origin `git symbolic-ref --short HEAD`
	clean-branches = "!f() { git branch | grep -v $1 | xargs git branch -D; }; f"
  pretty = !git commit -m "make prettier ðŸ’‹"
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[commit]
  verbose = true
[merge]
  tool = nvimdiff
[mergetool]
  prompt = true
  trustExitCode = true
[mergetool "nvimdiff"]
  cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[mergetool "nfugitive"]
  cmd = nvim -f -c "Gdiff" "$MERGED"
[diff]
  tool = nvimdiff
[difftool]
  prompt = true
  trustExitCode = true
[difftool "nvimdiff"]
  cmd = nvim -d $LOCAL $REMOTE

